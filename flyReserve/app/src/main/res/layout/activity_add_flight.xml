<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/paper"
    tools:context=".AddFlightActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/add_flight_imageViewPlane"
                android:layout_width="match_parent"
                android:layout_height="157dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/plane" />
            <EditText
                android:id="@+id/add_flight_editTextIsim"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittextarkaplan"
                android:hint="Adınızı Giriniz"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:textAlignment="center" />
            <EditText
                android:id="@+id/add_flight_editTextSoyisim"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittextarkaplan"
                android:hint="Soyadınızı Giriniz"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:textAlignment="center" />
            <EditText
                android:id="@+id/add_flight_editTextUlke"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittextarkaplan"
                android:hint="Şehri Giriniz"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:textAlignment="center" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/add_flight_editTextTarih"
                    android:layout_width="10dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittextarkaplan"
                    android:hint="Gidiş Tarihi Giriniz"
                    android:textColorHint="@color/white"
                    android:textColor="@color/white"
                    android:layout_marginRight="5dp"
                    android:textAlignment="center" />

                <EditText
                    android:id="@+id/add_flight_editTextTarih2"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittextarkaplan"
                    android:hint="Dönüş Tarihi Giriniz"
                    android:textColorHint="@color/white"
                    android:textColor="@color/white"
                    android:textAlignment="center" />
            </LinearLayout>

            <EditText
                android:id="@+id/add_flight_editTextHavaalani"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittextarkaplan"
                android:hint="Havaalanı Giriniz"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:textAlignment="center" />
            <EditText
                android:id="@+id/add_flight_editTextKoltuk"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittextarkaplan"
                android:hint="Koltuk Numaranızı Giriniz"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:textAlignment="center" />
            <Button
                android:layout_width="230dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/buttonarkaplan"
                android:backgroundTint="@color/buttonColor"
                android:onClick="ucusKaydet"
                android:text="Kaydet"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="19sp"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"/>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>